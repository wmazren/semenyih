<div class="span12">
  <div class="widget widget-table action-table">
    <div class="widget-header">
      <i class="icon-th-list"></i>
      <h3>Appointment Pending Diagnosis</h3>
    </div> <!-- /widget-header -->
            
    <div class="widget-content">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Physician</th>
            <th>Created at</th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.where(:state => 'open').order("created_at ASC").each do |open| %>
            <tr>
              <td><%= link_to open.patient.first_name, patient_path(open.patient) %></td>
              <td><%= open.patient.last_name %></td>
              <td><%= open.physician.first_name %></td>
              <td><%= open.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /widget-content -->
  </div> <!-- /widget -->

  <div class="widget widget-table action-table">
    <div class="widget-header">
      <i class="icon-th-list"></i>
      <h3>Appointment Pending Medication</h3>
    </div> <!-- /widget-header -->
            
    <div class="widget-content">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Physician</th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.where(:state => 'pending medication').order("created_at ASC").each do |pending_medication| %>
            <tr>
              <td><%= link_to pending_medication.patient.first_name, patient_path(pending_medication.patient) %></td>
              <td><%= pending_medication.patient.last_name %></td>
              <td><%= pending_medication.physician.first_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /widget-content -->
  </div> <!-- /widget -->
</div> <!-- /span6 -->
