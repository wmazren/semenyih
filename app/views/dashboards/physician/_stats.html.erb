<div class="row">
  <div class="span12">
    <div class="widget big-stats-container">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">                
            <h4>Total Appointments Today</h4>
            <span class="value"><%= @appointments.count %></span>               
          </div> <!-- .stat -->
      
          <div class="stat">                
            <h4>Pending Diagnosis Today</h4>
            <span class="value"><%= @appointments.where(:state => 'open').count %></span>               
          </div> <!-- .stat -->
      
          <div class="stat">                
            <h4>Pending Medication Today</h4>
            <span class="value"><%= @appointments.where(:state => 'pending medication').count %></span>                
          </div> <!-- .stat -->

          <div class="stat">                
            <h4>Total Patient Records</h4>
            <span class="value"><%= @patients.count %></span>                
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span12 --> 
</div> <!-- /row -->