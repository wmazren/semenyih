<div class="widget ">
  <div class="widget-header">
    <i class="icon-user"></i>
    <h3>List Users for <%= current_user.organization.name %></h3>
  </div> <!-- /widget-header -->

  <div class="widget-content">
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="patients">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>IC No</th>
          <th>D.O.B</th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td><%= link_to patient.first_name, patient_path(patient) %></td>
            <td><%= patient.last_name %></td>
            <td><%= patient.identification_number %></td>
            <td><%= patient.dob %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="form-actions">
      <%= link_to 'Create New Patient', new_patient_path, :class => 'btn btn-primary' %>
    </div>
  </div> <!-- /widget-content -->
</div> <!-- /widget -->
