<div class="widget ">
  <div class="widget-header">
    <i class="icon-user"></i>
    <h3>List Users for <%= current_user.organization.name %></h3>
  </div> <!-- /widget-header -->

  <div class="widget-content">
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="appointments">
      <thead>
        <tr>
          <th>Patient First Name</th>
          <th>Patient Last Name</th>
          <th>Physician</th>
          <th>Appointment Date</th>
          <th>Appointment Status</th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= link_to appointment.patient.first_name, appointment_path(appointment) %></td>
            <td><%= appointment.patient.last_name %></td>
            <td><%= appointment.physician.first_name %></td>
            <td><%= appointment.appointment_date.to_s(:datetime).humanize %></td>
            <td><%= appointment.state %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- /widget-content -->
</div> <!-- /widget -->
