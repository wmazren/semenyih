<div class="row">
  <div class="span8">
    <div class="widget ">
      <div class="widget-header">
        <i class="icon-user"></i>
        <h3>Edit My Profile</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#profile" data-toggle="tab">Account</a>
            </li>
<!--            <li><a href="#list_admins" data-toggle="tab">List Administrators</a></li>-->
          </ul>

          <br>

          <div class="tab-content">
            <div class="tab-pane active" id="profile">
              <%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
                <fieldset>
                  <%= f.input :username, :required => true, :autofocus => true %>
                  <%= f.input :email, :disabled => true %>
                  <%= f.input :first_name %>
                  <%= f.input :last_name %>
                  <% if current_user.admin? %>
                    <%= f.input :type, :collection => [ "", "Physician" ], :prompt => "Select role", :required => true %>
                  <% end %>
                  <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
                  <%= f.input :password_confirmation, :required => false %>
                  <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
                  <div class="form-actions">
                    <%= f.button :submit, :class => 'btn-primary' %>
                    <%= link_to 'Cancel', dashboards_path, :class => 'btn' %>
                  </div> <!-- /form-actions -->
                </fieldset>
              <% end %>
            </div> <!-- /tab-pane active -->
          </div> <!-- /tab-content -->
        </div> <!-- /tabbable -->
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span8 -->

  <div class="span4">
    <div class="widget widget-box">
      <div class="widget-header">
        <h3>Extra Info</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">

      </div> <!-- /widget-content -->
    </div> <!-- /widget-box -->
  </div> <!-- /span4 -->
</div> <!-- /span4 -->
