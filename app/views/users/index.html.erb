<div class="widget ">
  <div class="widget-header">
    <i class="icon-user"></i>
    <h3>List Users for <%= current_user.organization.name %></h3>
  </div> <!-- /widget-header -->

  <div class="widget-content">
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="users">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Role</th>
          <th>Created At</th>
          <th>Last Edited At</th>
          <th>Login Count</th>
          <th>Last Sign In At</th>
          <th class="td-actions">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= user.type %></td>
            <td><%= user.created_at.to_s(:datetime).humanize %></td>
            <td><%= user.updated_at.to_s(:datetime).humanize %></td>
            <td><%= user.sign_in_count %></td>
            <td><%if user.last_sign_in_at.blank? %>Never logged in<% else %><%= time_ago_in_words(user.last_sign_in_at.to_datetime)+' ago' %><% end %></td>
            <td class="td-actions">
              <%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %>
              <%= link_to 'Destroy', user, :data => { :confirm => 'Are you sure?' }, method: :delete, :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="form-actions">
      <%= link_to 'Create User', new_user_path, :class => 'btn btn-primary' %>
    </div>
  </div> <!-- /widget-content -->
</div> <!-- /widget -->
