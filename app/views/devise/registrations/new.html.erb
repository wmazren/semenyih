<h2>Sign up</h2>

<% resource.organization ||= Organization.new %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.fields_for :organization do |organization_form| %>
      <%= organization_form.input :name, :label => 'Organization', :required => true, :autofocus => true %>
      <%= organization_form.hidden_field :register_date, :value => Date.today %>
      <%= organization_form.hidden_field :expiry_date, :value => Date.today + 46.days %>
    <% end %>
    <%= f.input :username, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>

    <%= f.hidden_field :admin, :value => 1 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
